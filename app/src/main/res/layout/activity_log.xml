<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".logActivity"
    android:orientation="vertical"
    android:background="#34385B"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lifecourse"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:textColor="#D0D0D0"
        android:textSize="32sp"
        android:layout_marginTop="130dp"
        android:layout_gravity="center"
        android:fontFamily="@font/onestmid"/>

    <EditText

        android:layout_marginTop="50dp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Эл.почта"
        android:fontFamily="@font/onest"
        android:textSize="20sp"
        android:background="@drawable/rounded"
        android:backgroundTint="#D9D9D9"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <EditText

        android:layout_marginTop="30dp"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Пароль"
        android:fontFamily="@font/onest"
        android:textSize="20sp"
        android:background="@drawable/rounded"
        android:backgroundTint="#D9D9D9"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"

        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="40dp"
            >
            <android.widget.Button
                android:id="@+id/Continue"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:textSize="24dp"
                android:backgroundTint="#CB986B"
                android:text="Продолжить"
                android:background="@drawable/round10"

                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            >
            <android.widget.Button
                android:id="@+id/Back"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:textSize="24sp"
                android:backgroundTint="#CB986B"
                android:text="Назад"
                android:background="@drawable/round10"

                tools:ignore="MissingConstraints" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</LinearLayout>